{
  "name": "@durable-streams-cloudflare/core",
  "version": "0.7.0",
  "type": "module",
  "license": "MIT",
  "description": "Core durable-streams protocol for Cloudflare Workers + Durable Objects",
  "repository": {
    "type": "git",
    "url": "https://github.com/commoncurriculum/durable-streams-cloudflare",
    "directory": "packages/core"
  },
  "files": [
    "src/"
  ],
  "exports": {
    ".": "./src/http/worker.ts",
    "./hono": "./src/http/hono.ts"
  },
  "main": "./src/http/worker.ts",
  "types": "./src/http/worker.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "wrangler dev --local --port 8787 --inspector-port 9229 --persist-to ../../.wrangler/state",
    "lint": "oxlint src test",
    "format": "oxfmt --write src test",
    "format:check": "oxfmt --check src test",
    "conformance": "pnpm exec vitest run --config vitest.conformance.config.ts",
    "test": "pnpm run test:implementation",
    "test:unit": "pnpm exec vitest run --config vitest.unit.config.ts",
    "test:implementation": "pnpm exec vitest run --config vitest.implementation.config.ts",
    "bench": "pnpm exec vitest bench --config vitest.bench.config.ts",
    "perf": "pnpm exec vitest run --config vitest.performance.config.ts",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "arkregex": "^0.0.5",
    "arktype": "^2.1.29",
    "hono": "^4"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "latest",
    "@durable-streams/client": "^0.2.1",
    "@durable-streams/server-conformance-tests": "latest",
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "latest",
    "wrangler": "^4.63.0"
  }
}
