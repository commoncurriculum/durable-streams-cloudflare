{
  "name": "@durable-streams-cloudflare/admin-core",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "Admin dashboard for durable-streams core on Cloudflare Workers",
  "repository": {
    "type": "git",
    "url": "https://github.com/commoncurriculum/durable-streams-cloudflare",
    "directory": "packages/admin-core"
  },
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/worker.d.ts",
      "import": "./dist/worker.js"
    }
  },
  "main": "./dist/worker.js",
  "types": "./dist/worker.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "dev": "wrangler dev --port 8790",
    "deploy": "wrangler deploy",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "hono": "^4"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "latest",
    "typescript": "latest",
    "vitest": "latest",
    "wrangler": "^4.63.0"
  }
}
