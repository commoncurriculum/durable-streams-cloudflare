{
  "name": "@durable-streams-cloudflare/admin-subscription",
  "version": "0.8.0",
  "type": "module",
  "license": "MIT",
  "description": "Admin dashboard for durable-streams subscription service on Cloudflare Workers",
  "repository": {
    "type": "git",
    "url": "https://github.com/commoncurriculum/durable-streams-worker",
    "directory": "packages/admin-subscription"
  },
  "files": [
    "src/",
    "vite.config.ts",
    "tsconfig.json",
    "dist/server",
    "dist/client",
    "!dist/server/.dev.vars"
  ],
  "exports": {
    "./worker": "./dist/server/index.js"
  },
  "scripts": {
    "dev": "vite dev --port 8789",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "pnpm build && wrangler deploy",
    "format": "oxlint --fix src test && oxfmt --write src test",
    "format:check": "oxfmt --check src test",
    "lint": "oxlint src test",
    "lint:fix": "oxlint --fix src test",
    "prepublishOnly": "pnpm run build",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit",
    "test": "pnpm exec vitest run && pnpm exec playwright test --config playwright.config.ts",
    "test:browser": "pnpm exec playwright test --config playwright.config.ts",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@durable-streams/client": "^0.2.1",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.161.1",
    "@tanstack/react-start": "^1.161.1",
    "jose": "^6.1.3",
    "react": "^19.2.4",
    "react-aria-components": "^1.15.1",
    "react-dom": "^19.2.4",
    "recharts": "^2.15.4",
    "tailwind-merge": "^2.6.1",
    "tailwind-variants": "^0.3.1",
    "tailwindcss-react-aria-components": "^1.2.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.1",
    "@cloudflare/workers-types": "^4.20260218.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "4.1.0-beta.1",
    "wrangler": "^4.66.0"
  }
}
