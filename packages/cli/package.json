{
  "name": "@durable-streams-cloudflare/cli",
  "version": "0.8.0",
  "description": "CLI for scaffolding, deploying, and managing Durable Streams on Cloudflare",
  "type": "module",
  "bin": {
    "durable-streams": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "oxlint --fix src && oxfmt --write src",
    "format:check": "oxfmt --check src",
    "lint": "oxlint src",
    "lint:fix": "oxlint --fix src",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "jose": "^5.10.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
