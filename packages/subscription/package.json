{
  "name": "@durable-streams-cloudflare/subscription",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "Subscription service for durable-streams on Cloudflare Workers + Durable Objects",
  "repository": {
    "type": "git",
    "url": "https://github.com/commoncurriculum/durable-streams-cloudflare",
    "directory": "packages/subscription"
  },
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/http/worker.d.ts",
      "import": "./dist/http/worker.js"
    }
  },
  "main": "./dist/http/worker.js",
  "types": "./dist/http/worker.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "dev": "wrangler dev --local --port 8788 --inspector-port 9230",
    "lint": "oxlint src test",
    "format": "oxfmt --write src test",
    "format:check": "oxfmt --check src test",
    "test": "pnpm exec vitest run",
    "test:integration": "pnpm exec vitest run --config vitest.integration.config.ts",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4",
    "hono": "^4",
    "zod": "^3"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "latest",
    "@types/node": "latest",
    "oxfmt": "latest",
    "oxlint": "latest",
    "sql.js": "^1.13.0",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "latest",
    "wrangler": "^4.63.0"
  }
}
