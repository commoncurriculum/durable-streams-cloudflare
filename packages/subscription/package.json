{
  "name": "@durable-streams-cloudflare/subscription",
  "version": "0.7.0",
  "type": "module",
  "license": "MIT",
  "description": "Subscription service for durable-streams on Cloudflare Workers + Durable Objects",
  "repository": {
    "type": "git",
    "url": "https://github.com/commoncurriculum/durable-streams-worker",
    "directory": "packages/subscription"
  },
  "files": [
    "src/"
  ],
  "exports": {
    ".": "./src/http/worker.ts"
  },
  "main": "./src/http/worker.ts",
  "types": "./src/http/worker.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "wrangler dev --local --port 8788 --inspector-port 9230 --persist-to ../../.wrangler/state",
    "lint": "oxlint src test",
    "format": "oxfmt --write src test",
    "format:check": "oxfmt --check src test",
    "test": "pnpm exec vitest run",
    "test:integration": "pnpm exec vitest run --config vitest.integration.config.ts",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@hono/arktype-validator": "^2.0.1",
    "arkregex": "^0.0.5",
    "arktype": "^2.1.29",
    "hono": "^4"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "https://pkg.pr.new/@cloudflare/vitest-pool-workers@11632",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@types/node": "^25.2.1",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "4.1.0-beta.1",
    "wrangler": "^4.63.0"
  }
}
