{
  "name": "@durable-streams-cloudflare/server",
  "version": "0.8.0",
  "type": "module",
  "license": "MIT",
  "description": "Unified durable-streams server with subscription support for Cloudflare Workers + Durable Objects",
  "repository": {
    "type": "git",
    "url": "https://github.com/commoncurriculum/durable-streams-worker",
    "directory": "packages/server"
  },
  "files": [
    "src/"
  ],
  "exports": {
    ".": "./src/http/worker.ts",
    "./hono": "./src/http/hono.ts"
  },
  "main": "./src/http/worker.ts",
  "types": "./src/http/worker.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "wrangler dev --local --port 8787 --inspector-port 9229 --persist-to ../../.wrangler/state",
    "lint": "oxlint src test",
    "lint:fix": "oxlint --fix src test",
    "format": "oxlint --fix src test && oxfmt --write src test",
    "format:check": "oxfmt --check src test",
    "conformance": "pnpm exec vitest run --config vitest.conformance.config.ts",
    "test": "pnpm run test:implementation",
    "test:unit": "pnpm exec vitest run --config vitest.unit.config.ts",
    "test:coverage": "pnpm exec vitest run --config vitest.unit.config.ts --coverage",
    "test:implementation": "pnpm exec vitest run --config vitest.implementation.config.ts",
    "test:implementation-coverage": "pnpm exec vitest run --config vitest.integration-coverage.config.ts && pnpm exec nyc report --temp-dir .nyc_output --report-dir coverage-integration --reporter=text --reporter=html --reporter=json-summary --cwd=. --include=src/** --exclude=src/**/*.d.ts --exclude=src/**/types.ts --exclude=src/**/schema.ts",
    "test:coverage-all": "pnpm run test:coverage && pnpm run test:implementation-coverage && node scripts/merge-coverage.mjs",
    "cov": "pnpm run test:coverage-all && pnpm run coverage",
    "coverage": "node scripts/coverage-summary.mjs",
    "coverage:unit": "node scripts/coverage-summary.mjs unit",
    "coverage:integration": "node scripts/coverage-summary.mjs integration",
    "bench": "pnpm exec vitest bench --config vitest.bench.config.ts",
    "perf": "pnpm exec vitest run --config vitest.performance.config.ts",
    "typecheck": "pnpm exec tsc -p tsconfig.src.json --noEmit && pnpm exec tsc -p tsconfig.unit.json --noEmit && pnpm exec tsc -p tsconfig.node.json --noEmit",
    "openapi": "tsx scripts/generate-openapi.ts",
    "coverage:lines": "node scripts/coverage-lines.mjs"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.2.2",
    "arkregex": "^0.0.5",
    "arktype": "^2.1.29",
    "drizzle-arktype": "^0.1.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4",
    "hono-openapi": "^1.2.0",
    "loglayer": "^8.2.1"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": ">=4"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "https://pkg.pr.new/@cloudflare/vitest-pool-workers@11632",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@durable-streams/client": "^0.2.1",
    "@durable-streams/server-conformance-tests": "^0.2.1",
    "@types/node": "^25.2.3",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "4.1.0-beta.3",
    "esbuild": "^0.27.3",
    "istanbul-lib-instrument": "^6.0.3",
    "jose": "^5.9.6",
    "madge": "^8.0.0",
    "nyc": "^17.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "4.1.0-beta.1",
    "wrangler": "^4.63.0"
  }
}
