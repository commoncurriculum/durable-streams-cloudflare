{
  "name": "durable-streams-root",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r run test",
    "test:all": "pnpm -r run typecheck && pnpm -C packages/core run lint && pnpm -C packages/subscription run lint && pnpm -C packages/core run test:unit && pnpm -C packages/core run conformance && pnpm -r run test && pnpm -C packages/subscription run test:integration",
    "typecheck": "pnpm -r run typecheck",
    "dev": "pnpm --filter @durable-streams-cloudflare/core --filter @durable-streams-cloudflare/subscription --filter @durable-streams-cloudflare/admin-core --filter @durable-streams-cloudflare/admin-subscription --parallel dev"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8"
  },
  "pnpm": {
    "overrides": {
      "vitest": "4.1.0-beta.1",
      "@vitest/runner": "4.1.0-beta.1",
      "@vitest/snapshot": "4.1.0-beta.1"
    }
  }
}
